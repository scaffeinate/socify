<div class="row" style="margin-top: 25px;">
  <div class="col-lg-4 col-lg-offset-4">
    <h3 class="text-center">Join Socify.</h3>
    <br>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <% if resource.errors.any? %>
        <div class="alert alert-danger alert-dismissable">
          <%= resource.errors.full_messages.first %>
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.text_field :name, class: 'form-control', autofocus: true, placeholder: 'Name' %>
      </div>
      <div class="form-group">
        <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: 'form-control', autocomplete: 'off', placeholder: 'Password' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: 'off', placeholder: 'Confirm' %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit 'Sign up', class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>
  </div>
</div>
