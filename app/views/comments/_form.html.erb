<%= form_tag comments_path(commentable_type: c.class.to_s, commentable_id: c.id), method: :post, remote: true do %>
  <div class="form-group">
    <div class="row">
      <div class="col-xs-1">
        <%= render 'shared/avatar', user: current_user, klass: 'avatar-sm' %>
      </div>
      <div class="col-xs-11">
        <%= text_area_tag :comment_text, nil, placeholder: 'Enter Comment', class: 'form-control', rows: 1 %>
      </div>
    </div>
  </div>
  <div class="pull-right">
    <%= button_tag class: 'btn btn-sm btn-primary-inverted' do %>
      <%= fa_icon 'comment-o' %> comment
      <% end %>
  </div>
<% end %>
