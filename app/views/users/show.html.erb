<%= render 'shared/cover', user: @user %>
<br>
<div id="user-<%= @user.id %>" class="row">
  <%= render 'shared/user_board' %>
  <div class="stream">
    <h4 class="underlined">USER STREAM</h4>
    <div id="activities" class="resources-block">
      <% if @activities.empty? %>
        <div class="well">
          <%= render('shared/no_resource', resources: 'Activities') %>
        </div>
      <% else %>
        <%= render_activities(@activities, layout: '/shared/activity') %>
      <% end %>
    </div>
    <div class="pagination-block">
      <%= render 'shared/paginate', resources: @activities %>
    </div>
  </div>
  <% if is_current_user?(@user) %>
    <div id="sidebar">
      <div id="links" class="list-group">
        <%= link_to 'Edit Profile', edit_user_path(@user), class: 'list-group-item' %>
        <%= link_to 'Change password', edit_user_registration_path, class: 'list-group-item' %>
        <%= link_to 'Friends', friends_user_path(@user), class: 'list-group-item' %>
        <%= link_to 'Followers', followers_user_path(@user), class: 'list-group-item' %>
        <%= link_to 'Deactivate', deactivate_user_path(@user), class: 'list-group-item' %>
      </div>
    </div>
  <% end %>
</div>
