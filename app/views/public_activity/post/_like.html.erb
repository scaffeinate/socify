<% if activity_resources_exist?(activity) %>
  <div class="activity-like">
    <div class="info">
      <%= render 'shared/avatar', user: activity.owner %>
      <h4 class="name"><%= link_to activity.owner.name, user_path(activity.owner) %></h4>
      <span class="action">liked a <%= link_to 'post', activity.trackable %></span>
    </div>
    <div class="content">
      <h4><small><%= activity.trackable.content %></small></h4>
    </div>
    <%= render 'shared/created_at', activity: activity %>
  </div>
<% end %>
