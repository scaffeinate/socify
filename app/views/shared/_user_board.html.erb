<div id="user-board">
  <div id="profile">
    <div class="cover" style="background-image: url(/assets/cover.png);">
      <%= render 'shared/avatar', user: @user %><br>
    </div>
    <div id="info">
      <h4 class="name"><%= link_to @user.name, @user %></h4>
      <span id="bio">
        <%= @user.bio || 'Nothing to say about me.' %>
      </span>
      <% if is_current_user?(@user) %>
        <div class="row">
          <div id="stats">
            <div class="count">
              <span>FOLLOWING</span>
              <h4><%= @user.following_users.count %></h4>
            </div>
            <div class="count">
              <span>POSTS</span>
              <h4><%= @user.posts_count %></h4>
            </div>
          </div>
        </div>
      <% else %>
        <div id="follow" class="text-center">
          <%= render 'follows/form', user: @user %>
          <h6><%= 'Follows you' if current_user.followed_by?(@user) %></h6>
        </div>
      <% end %>
    </div>
  </div>
  <div id="about">
    <h4 class="text-center">About</h4>
    <ul>
      <li>Joined <%= get_date_and_year(@user.created_at) %></li>
      <% if @user.dob.present? %>
        <li><%= "#{pluralize(age(@user.dob), 'year')} old" %></li>
      <% end %>
      <li>Lives in <%= @user.location %></li>
      <li>From <%= @user.hometown %></li>
      <li>Works at <%= @user.works_at %></li>
      <li>Became friends with <%= @user.following_users.last.first_name %></li>
    </ul>
  </div>
</div>
